<div class="row mb-2">
    <button class="btn btn-primary col ml-3 mr-2 collapsed" data-toggle="collapse"
            data-target="#{{prefix}}subscribe-mail-content"
            aria-expanded="false" aria-controls="{{prefix}}subscribe-mail-content">
        <i class="fas fa-envelope"></i> Add email notification
    </button>
</div>

<div class="collapse alert border" id="{{prefix}}subscribe-mail-content">

    {{>notifications/email-not-verified}}
    {{>notifications/email-not-provided}}

    <div class="notify-entry-content-normal notify-entry-content-element">
        <div id="{{prefix}}subscribe-mail-existing">
            <table style="max-height: 300px;" class="table table-striped table-grey">
                <thead>
                <tr>
                    <th></th>
                    <th>Notification Classes</th>
                    <th>Subscribed Tokens</th>
                </tr>
                </thead>
                <tbody id="{{prefix}}subscribe-mail-existing-notifications">
                </tbody>
            </table>
        </div>

        <div class="form-group d-none" id="{{prefix}}subscribe-mail-new">

            <div>
                <ul class="list-group bg-dark list-group-striped mb-2">
                    {{#notification-classes}}
                        {{> capabilities/part}}
                    {{/notification-classes}}
                </ul>
            </div>
        </div>

        <div class="form-group">
            <div class="custom-control custom-switch">
                <input type="checkbox" class="custom-control-input"
                       id="{{prefix}}subscribe-mail-include-children" checked>
                <label class="custom-control-label" for="{{prefix}}subscribe-mail-include-children">Include
                    children</label>
            </div>
            <small class="form-text text-muted">If enabled, you will also receive notifications for all current and
                future children (and their children and so on).</small>
        </div>


        <div class="row mx-1">
            <button class="btn btn-primary col" onclick="addToExistingNotifications('{{prefix}}')"
                    id="{{prefix}}send-existing-mail-notification-btn">
                <i class="fas fa-bell"></i>
                Add token to selected notifications
            </button>
            <button class="btn btn-primary col d-none" onclick="sendNewEmailNotificationFromModal('{{prefix}}')"
                    id="{{prefix}}send-new-mail-notification-btn">
                <i class="fas fa-envelope"></i>
                Subscribe to email notifications
            </button>
            <button class="btn btn-success col ml-2 {{prefix}}toggle-subscribe-notification-content-btn"
                    id="{{prefix}}switch-to-new-mail-notification-btn"
                    onclick="toggle_subscribe_notification_content('{{prefix}}')">Create new notification
            </button>
            <button class="btn btn-info col ml-2 {{prefix}}toggle-subscribe-notification-content-btn d-none"
                    id="{{prefix}}switch-to-existing-mail-notification-btn"
                    onclick="toggle_subscribe_notification_content('{{prefix}}')">Use existing notifications
            </button>
        </div>

    </div>
</div>
