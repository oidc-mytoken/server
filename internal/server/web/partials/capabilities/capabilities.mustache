<div class="pb-3 row">
    <h4 class="col-sm">Capabilities</h4>
    {{#create-with-profiles}}
        <span class="form-row mr-3 pl-3">
            <span class="input-group"
                  data-toggle="tooltip" data-placement="top"
                  title="Prefill values from a predefined template" data-original-title="">
                <span class="input-group-prepend">
                     <span class="input-group-text bg-my_grey">
                             <i class="fas fa-bookmark"></i>
                    </span>
                </span>
                <select id="{{prefix}}cap-template" class="form-control custom-select form-inline any-profile-input"
                        instance-prefix="{{prefix}}">
                    <option value="">Custom</option>
                    {{#profiles.capabilities}}
                        <option value="{{Payload}}">{{Name}}</option>
                    {{/profiles.capabilities}}
                </select>
            </span>
        </span>
    {{/create-with-profiles}}
    {{#collapse.Capabilities}}
        <button class="btn btn-info my-expand" type="button" data-toggle="collapse" data-target="#{{prefix}}cap-body"
                aria-expanded="false" aria-controls="{{prefix}}cap-body" id="{{prefix}}cap-expand">Expand
        </button>
    {{/collapse.Capabilities}}
</div>

<div id="{{prefix}}cap-summary" class="d-flex justify-content-between pb-2">
    <h4>
        <span class="badge badge-success badge-pill" id="{{prefix}}cap-summary-count-green" data-toggle="tooltip"
              data-placement="bottom" title=""
              data-original-title=""></span>
        <span class="badge badge-warning badge-pill" id="{{prefix}}cap-summary-count-yellow" data-toggle="tooltip"
              data-placement="bottom" title=""
              data-original-title=""></span>
        <span class="badge badge-danger badge-pill" id="{{prefix}}cap-summary-count-red" data-toggle="tooltip"
              data-placement="bottom" title=""
              data-original-title=""></span>
    </h4>
    <h4>
        <i class="fab fa-openid text-muted text-success" data-toggle="tooltip" data-placement="bottom" title=""
           data-original-title="" id="{{prefix}}cap-summary-AT"></i>
        <i class="fas fa-key text-muted text-success" data-toggle="tooltip" data-placement="bottom" title=""
           data-original-title="" id="{{prefix}}cap-summary-MT"></i>
        <i class="fas fa-info-circle text-muted text-success" data-toggle="tooltip" data-placement="bottom" title=""
           data-original-title="" id="{{prefix}}cap-summary-info"></i>
        <i class="fas fa-wrench text-muted text-success" data-toggle="tooltip" data-placement="bottom" title=""
           data-original-title="" id="{{prefix}}cap-summary-mom"></i>
        <i class="fas fa-cog text-muted text-success" data-toggle="tooltip" data-placement="bottom" title=""
           data-original-title="" id="{{prefix}}cap-summary-settings"></i>
    </h4>
</div>

<div id="{{prefix}}cap-body" class="{{#collapse.Capabilities}}collapse{{/collapse.Capabilities}}">
    <ul class="list-group bg-my_grey list-group-striped">
        {{#capabilities}}
            {{> capabilities/part}}
        {{/capabilities}}
    </ul>
</div>
